{
  "type": "object",
  "title": "Connection",
  "required": [
    "#token",
    "database",
    "db_schema"
  ],
  "properties": {
    "#token": {
      "type": "string",
      "title": "Access Token",
      "description": "The MotherDuck access token. More information on how to get the token can be found in the <a href=\"https://motherduck.com/docs/key-tasks/authenticating-and-connecting-to-motherduck/authenticating-to-motherduck/#authentication-using-an-access-token\">documentation</a>.",
      "format": "password",
      "propertyOrder": 1
    },
    "test_connection": {
      "type": "button",
      "format": "sync-action",
      "propertyOrder": 2,
      "options": {
        "async": {
          "label": "TEST CONNECTION",
          "action": "testConnection"
        }
      }
    },
    "db": {
      "type": "string",
      "enum": [],
      "default": "",
      "title": "Database",
      "format": "select",
      "options": {
        "async": {
          "label": "Load databases",
          "action": "list_databases",
          "autoload": [
            "parameters.#token"
          ]
        }
      },
      "propertyOrder": 3
    },
    "db_schema": {
      "type": "string",
      "enum": [],
      "default": "",
      "title": "Schema",
      "format": "select",
      "options": {
        "async": {
          "label": "Load schemas",
          "action": "list_schemas",
          "autoload": [
            "parameters.database"
          ]
        }
      },
      "propertyOrder": 4
    }
  }
}